<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h2 class="text-center">Shipping Calculator</h2>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3">
                            <label class="form-label">Weight (in pounds):</label>
                            <input type="number" step="0.1" name="weight" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Shipping Type:</label>
                            <select name="shippingType" class="form-select">
                                <option value="standard">Standard</option>
                                <option value="express">Express</option>
                                <option value="overnight">Overnight</option>
                            </select>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Calculate Shipping</button>
                        </div>
                    </form>

                    @if (ViewBag.Cost != null)
                    {
                        <div class="alert alert-success mt-3">
                            <h4 class="text-center">Estimated Shipping Cost: @ViewBag.Cost.ToString("C")</h4>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>