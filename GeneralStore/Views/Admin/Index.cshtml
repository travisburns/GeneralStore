@model GeneralStore.Models.AdminViewModel

<div class="container">
    <h1>Admin Dashboard</h1>
    <p>Manage Inventory and Orders</p>

    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Total Items</h5>
                    <h2>@Model.Items.Count</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Active Orders</h5>
                    <h2>@Model.Orders.Count(o => o.Status == "Pending")</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Low Stock</h5>
                    <h2>@Model.Items.Count(i => i.StockQuantity < 5)</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Add New Item Form -->
    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">Add New Item</h5>
            <form method="post" asp-action="AddItem">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label>Item Name</label>
                        <input type="text" name="Name" class="form-control" required>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label>Price</label>
                        <input type="number" step="0.01" name="Price" class="form-control" required>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label>Quantity</label>
                        <input type="number" name="StockQuantity" class="form-control" required>
                    </div>
                </div>
                <div class="mb-3">
                    <label>Description</label>
                    <textarea name="Description" class="form-control" rows="3" required></textarea>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label>Category</label>
                        <select name="Category" class="form-control" required>
                            <option>Furniture</option>
                            <option>Antiques</option>
                            <option>Tools</option>
                            <option>Misc</option>
                        </select>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Add Item</button>
            </form>
        </div>
    </div>

    <div class="recent-orders">
        <h3>Recent Orders</h3>
        <div class="row">
            @foreach (var order in ViewBag.RecentOrders)
            {
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Order #@order.OrderId - @order.CustomerName</h5>
                            <p class="card-text">Status: @order.Status</p>
                            <p class="card-text">Items:</p>
                            <ul class="list-unstyled">
                                @foreach (var item in order.Items)
                                {
                                    <li>@item.Name - Quantity: 1</li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <h3>Current Inventory</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Stock</th>
                <th>Category</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>@item.StockQuantity</td>
                    <td>@item.Category</td>
                    <td>@(item.StockQuantity > 0 ? "In Stock" : "Out of Stock")</td>
                </tr>
            }
        </tbody>
    </table>
</div>