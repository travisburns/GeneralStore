@model List<Item>
<div class="container">
    <div class="row">
        <!-- Search and Filter Area -->
        <div class="col-12 mb-4">
            <form method="get" class="d-flex">
                <input type="text" name="search" class="form-control me-2" placeholder="Search items...">
                <button type="submit" class="btn btn-primary">Search</button>
            </form>
        </div>
    </div>
    <div class="row">
        <!-- Filter Sidebar -->
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Filters</h5>
                    <h6>Categories</h6>
                    <form method="get">
                        <div class="form-check">
                            <input type="radio" name="category" value="Furniture" class="form-check-input" id="furniture" onchange="this.form.submit()">
                            <label class="form-check-label" for="furniture">Furniture</label>
                        </div>
                        <div class="form-check">
                            <input type="radio" name="category" value="Antiques" class="form-check-input" id="antiques" onchange="this.form.submit()">
                            <label class="form-check-label" for="antiques">Antiques</label>
                        </div>
                        <div class="form-check">
                            <input type="radio" name="category" value="Tools" class="form-check-input" id="tools" onchange="this.form.submit()">
                            <label class="form-check-label" for="tools">Tools</label>
                        </div>
                        <div class="form-check">
                            <input type="radio" name="category" value="Misc" class="form-check-input" id="misc" onchange="this.form.submit()">
                            <label class="form-check-label" for="misc">Misc</label>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- Item Grid -->
        <div class="col-md-9">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">@item.Name</h5>
                                <p class="card-text">@item.Description</p>
                                <p class="card-text">@item.Price.ToString("C")</p>
                                <div class="badge bg-@(item.StockQuantity > 0 ? "success" : "danger") mb-2">
                                    @(item.StockQuantity > 0 ? "In Stock" : "Out of Stock")
                                </div>
                                <br />
                                <a href="@Url.Action("Details", "Shop", new { id = item.ItemId })"
                                   class="btn btn-primary">View Details</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>